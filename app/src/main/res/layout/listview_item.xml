<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/areaTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dayTotalTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Σήμερα"
        app:layout_constraintStart_toStartOf="@+id/areaTxt"
        app:layout_constraintTop_toBottomOf="@+id/areaTxt" />

    <TextView
        android:id="@+id/dayDiffTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:text="Διαφορά"
        app:layout_constraintBaseline_toBaselineOf="@+id/dayTotalTxt"
        app:layout_constraintStart_toEndOf="@+id/dayTotalTxt" />

    <TextView
        android:id="@+id/totalVacTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:text="ΣΥΝΟΛΟ"
        app:layout_constraintBaseline_toBaselineOf="@+id/dayDiffTxt"
        app:layout_constraintStart_toEndOf="@+id/dayDiffTxt" />

    <TextView
        android:id="@+id/dayTotalNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/dayTotalTxt"
        app:layout_constraintTop_toBottomOf="@+id/dayTotalTxt" />

    <TextView
        android:id="@+id/dayDiffNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBaseline_toBaselineOf="@+id/dayTotalNum"
        app:layout_constraintStart_toStartOf="@+id/dayDiffTxt" />

    <TextView
        android:id="@+id/totalVacNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBaseline_toBaselineOf="@+id/dayDiffNum"
        app:layout_constraintStart_toStartOf="@+id/totalVacTxt" />
</androidx.constraintlayout.widget.ConstraintLayout>